<Window x:Name="newGamePrompt" x:Class="BGCRanker.gamePrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Game" Height="134" Width="354" ResizeMode="NoResize" KeyDown="newGamePrompt_KeyDown">
    <Grid Margin="0,0,0,-4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.ColumnSpan="2" Content="What's the name of your new game?" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="328"/>
        <TextBox x:Name="gamePromptTextBox" Grid.ColumnSpan="2" Margin="10,41,10,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="gameCancleBtn" Grid.ColumnSpan="2" Content="Cancle" Margin="263,69,10,0" Click="gameCancleBtn_Click" Height="22" VerticalAlignment="Top"/>
        <Button x:Name="ganeOkBtn" Grid.ColumnSpan="2" Content="OK" HorizontalAlignment="Left" Margin="183,69,0,0" Width="75" Click="ganeOkBtn_Click" Height="22" VerticalAlignment="Top"/>

    </Grid>
</Window>
