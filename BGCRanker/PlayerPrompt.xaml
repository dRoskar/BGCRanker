<Window x:Class="BGCRanker.PlayerPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Player" Height="102" Width="275" ResizeMode="NoResize" KeyDown="Window_KeyDown">
    <Grid>
        <Label Content="Player name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="78"/>
        <TextBox x:Name="txtBox" Height="23" Margin="93,12,14,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="playerCancleBtn" Content="Cancle" Margin="184,40,10,0" Height="22" VerticalAlignment="Top" Click="playerCancleBtn_Click"/>
        <Button x:Name="playerOkBtn" Content="OK" HorizontalAlignment="Left" Margin="104,40,0,0" VerticalAlignment="Top" Width="75" Click="playerOkBtn_Click"/>

    </Grid>
</Window>
